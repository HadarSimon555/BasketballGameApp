            <ScrollView>
                <Frame Style="{StaticResource logInSignUp}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <Label Text="שם השחקן:" HorizontalOptions="StartAndExpand" Grid.Column="0" Grid.Row="0" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="{Binding CurrentPlayer.User.Name}" HorizontalOptions="EndAndExpand" Grid.Column="1" Grid.Row="0" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="קבוצה:" HorizontalOptions="StartAndExpand" Grid.Column="0" Grid.Row="1" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="{Binding CurrentPlayer.Team.Name}" HorizontalOptions="EndAndExpand" Grid.Column="0" Grid.Row="1" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="גובה:" HorizontalOptions="StartAndExpand" Grid.Column="0" Grid.Row="2" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="{Binding CurrentPlayer.Height}" HorizontalOptions="EndAndExpand" Grid.Column="0" Grid.Row="2" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="תאריך לידה:" HorizontalOptions="StartAndExpand" Grid.Column="0" Grid.Row="3" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="{Binding CurrentPlayer.User.BirthDate}" HorizontalOptions="EndAndExpand" Grid.Column="0" Grid.Row="3" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="מין:" HorizontalOptions="StartAndExpand" Grid.Column="0" Grid.Row="4" Style="{StaticResource labelNameStyle}"/>
                        <Label Text="{Binding CurrentPlayer.User.Gender}" HorizontalOptions="EndAndExpand" Grid.Column="0" Grid.Row="4" Style="{StaticResource labelNameStyle}"/>
                        <Image Grid.Row="5" HorizontalOptions="CenterAndExpand" Source="{Binding CurrentPlayer.User.Image}"/>
                    </Grid>
                </Frame>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
